:root {
  --bg: #05000a;
  --glass: rgba(20, 0, 30, 0.75);
  --border: rgba(255, 0, 102, 0.35);
  --text: #ffffff;
  --muted: #9ca3af;

  /* Neon colors */
  --primary: #ff0066;
  --secondary: #00ffaa;
  --accent: #ff3cac;
}

/* Shell */
.builder-shell {
  width: 100%;
  max-width: 1200px;
  margin: auto;
  padding: 60px 40px;
  color: var(--text);
}

/* Heading */
.builder-heading {
  font-size: 34px;
  margin-bottom: 40px;
  text-transform: uppercase;
  letter-spacing: 1px;

  text-shadow:
    0 0 8px rgba(255, 0, 102, 0.8),
    0 0 20px rgba(255, 0, 102, 0.5);
}

/* Sections */
.builder-section {
  background: var(--glass);
  border: 1px solid var(--border);
  border-radius: 22px;
  padding: 32px;
  margin-bottom: 30px;

  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);

  box-shadow:
    0 0 20px rgba(255, 0, 102, 0.25),
    inset 0 0 0 1px rgba(255, 255, 255, 0.04);
}

.builder-section h3 {
  margin-bottom: 22px;
  color: var(--primary);
  font-size: 20px;
  letter-spacing: 0.8px;
  text-transform: uppercase;

  text-shadow:
    0 0 6px rgba(255, 0, 102, 0.7);
}

/* Row layout */
.row {
  display: grid;
  grid-template-columns: 260px 1fr;
  gap: 22px;
  margin-bottom: 22px;
}

.row label {
  font-weight: 600;
  color: var(--muted);
  padding-top: 10px;
  letter-spacing: 0.4px;
}

/* Inputs */
.row input,
.row textarea {
  width: 100%;
  padding: 13px 14px;
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.12);

  background: rgba(0, 0, 0, 0.75);
  color: var(--text);
  font-size: 14px;

  transition: border 0.3s ease, box-shadow 0.3s ease;
}

.row textarea {
  resize: vertical;
  min-height: 95px;
}

.row input::placeholder,
.row textarea::placeholder {
  color: #8b8b9f;
}

/* Focus neon glow */
.row input:focus,
.row textarea:focus {
  outline: none;
  border-color: var(--secondary);

  box-shadow:
    0 0 8px rgba(0, 255, 170, 0.6),
    0 0 22px rgba(0, 255, 170, 0.35);
}

/* =========================
   Dynamic fields (NEW)
========================= */

.dynamic-row {
  display: flex;
  gap: 10px;
  margin-bottom: 10px;
}

.dynamic-row input {
  flex: 1;
}

/* Remove button */
.dynamic-row button {
  padding: 0 14px;
  border-radius: 12px;
  border: none;
  cursor: pointer;

  background: rgba(255, 0, 102, 0.18);
  color: var(--primary);
  font-weight: 900;
  font-size: 14px;

  box-shadow:
    0 0 10px rgba(255, 0, 102, 0.4);

  transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.dynamic-row button:hover {
  transform: scale(1.1);
  box-shadow:
    0 0 18px rgba(255, 0, 102, 0.7);
}

/* Add button */
.add-btn {
  margin-top: 6px;
  padding: 8px 16px;
  border-radius: 14px;
  border: 1px dashed rgba(0, 255, 170, 0.55);

  background: transparent;
  color: var(--secondary);
  font-weight: 700;
  font-size: 13px;
  letter-spacing: 0.6px;

  cursor: pointer;

  text-shadow:
    0 0 8px rgba(0, 255, 170, 0.6);

  transition: transform 0.2s ease, box-shadow 0.3s ease;
}

.add-btn:hover {
  transform: translateY(-1px);
  box-shadow:
    0 0 16px rgba(0, 255, 170, 0.6);
}

/* File row */
.file-row {
  display: flex;
  align-items: center;
  gap: 14px;
}

.file-row a {
  color: var(--secondary);
  text-decoration: none;
  font-weight: 600;
  letter-spacing: 0.4px;

  text-shadow:
    0 0 8px rgba(0, 255, 170, 0.6);
}

.file-row a:hover {
  text-decoration: underline;
  opacity: 0.9;
}

/* Save button */
.save-btn {
  width: 100%;
  padding: 18px;

  background: linear-gradient(135deg, #ff0066, #ff3cac);
  border: none;
  border-radius: 16px;

  color: #ffffff;
  font-size: 16px;
  font-weight: 800;
  letter-spacing: 1px;
  text-transform: uppercase;

  cursor: pointer;

  box-shadow:
    0 0 20px rgba(255, 0, 102, 0.6),
    0 0 45px rgba(255, 0, 102, 0.35);

  transition: transform 0.25s ease, box-shadow 0.3s ease;
}

.save-btn:hover {
  transform: translateY(-2px);
  box-shadow:
    0 0 30px rgba(255, 0, 102, 0.9),
    0 0 65px rgba(255, 0, 102, 0.6);
}

.save-btn:active {
  transform: translateY(0);
}

/* Disabled */
.save-btn:disabled {
  opacity: 0.45;
  cursor: not-allowed;
  box-shadow: none;
}

/* =========================
   Responsive
========================= */
@media (max-width: 900px) {
  .row {
    grid-template-columns: 1fr;
  }

  .row label {
    padding-top: 0;
  }

  .builder-shell {
    padding: 40px 20px;
  }
}
/* =========================
   MOBILE VIEW (â‰¤ 480px)
========================= */
@media (max-width: 480px) {

  body {
    overflow-x: hidden;
  }

  /* âŒ GRID IS THE PROBLEM â€” REMOVE IT */
  .row {
    display: flex !important;
    flex-direction: column;
    width: 100%;
    min-width: 0;
    gap: 12px;
    margin-bottom: 18px;
  }

  .row > div {
    width: 100%;
    min-width: 0;
  }

  .row label {
    font-size: 13px;
    padding-top: 0;
  }

  .row input,
  .row textarea {
    width: 100%;
    min-width: 0;
  }

  /* ðŸ”¥ DYNAMIC ROW â€” HARD LOCK */
  .dynamic-row {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-width: 0;
    gap: 8px;
  }

  .dynamic-row input,
  .dynamic-row textarea {
    width: 100%;
    min-width: 0;
  }

  .dynamic-row button {
    width: 100%;
    flex-shrink: 0;
  }

  .add-btn {
    width: 100%;
  }

  .file-row {
    display: flex;
    flex-direction: column;
    width: 100%;
    min-width: 0;
  }

  .save-btn {
    width: 100%;
  }
}
